<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/more"
        android:drawable="@drawable/ic_expand_more_black_24px"
        android:state_checked="true"/>

    <item
        android:id="@+id/less"
        android:drawable="@drawable/ic_expand_less_black_24px"/>

    <transition
        android:drawable="@drawable/animatedcollapse"
        android:fromId="@id/less"
        android:toId="@id/more"/>

    <transition
        android:drawable="@drawable/animatedexpand"
        android:fromId="@id/more"
        android:toId="@id/less"/>

</animated-selector>